<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_enabled="true"
        android:state_checked="true">
        <shape>
            <corners android:radius="@dimen/radiobutton_size" />
            <solid android:color="@color/colorAccent" />
            <size android:height="@dimen/radiobutton_size" android:width="@dimen/radiobutton_size" />
            <stroke android:width="@dimen/radiobutton_stroke_size" android:color="@color/colorAccent" />
        </shape>
    </item>
    <item
        android:state_enabled="true"
        android:state_checked="false">
        <shape>
            <corners android:radius="@dimen/radiobutton_size" />
            <solid android:color="@color/colorPrimary" />
            <size android:height="@dimen/radiobutton_size" android:width="@dimen/radiobutton_size" />
            <stroke android:width="@dimen/radiobutton_stroke_size" android:color="@color/lightDark" />
        </shape>
    </item>
</selector>