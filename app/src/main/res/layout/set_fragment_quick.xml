<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/set_quick_fling"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackground"
        >
        <TextView
            android:text="屏幕边缘前进后退"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:textColor="@android:color/black"
            />

        <CheckBox
            android:id="@+id/set_quick_fling_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:checked="false"
            android:button="@drawable/default_radiobutton_s" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/set_quick_vscroll"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:background="?android:attr/selectableItemBackground"
        >
        <TextView
            android:text="音量键滚动"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:textColor="@android:color/black"
            />

        <CheckBox
            android:id="@+id/set_quick_vscroll_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:checked="false"
            android:button="@drawable/default_radiobutton_s" />
    </LinearLayout>


    <include layout="@layout/fragment_action_bar" />

</LinearLayout>