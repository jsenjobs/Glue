<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="vertical"
    android:id="@+id/searchBox"
    android:visibility="gone"
    android:gravity="bottom"
    android:background="@color/colorWhiteAlpha"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        >
        <TextView
            android:id="@+id/searchBox_matches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/searchBoxEdit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:theme="@style/MyEditText"
            android:hint="页內查找"
            android:textSize="12sp"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/searchBox_next"
            android:layout_width="@dimen/func_icon_width"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@mipmap/more_dis"
            android:background="?android:attr/selectableItemBackground"
            />
        <ImageView
            android:id="@+id/searchBox_last"
            android:layout_width="@dimen/func_icon_width"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@mipmap/icon_last"
            android:background="?android:attr/selectableItemBackground"
            />
    </LinearLayout>



</LinearLayout>